# App Configuration
# The public URL where your app is hosted
NEXT_PUBLIC_APP_URL="http://localhost:3001"
# Environment: development, production, or test
NODE_ENV="development"

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=""

# Authentication
# Must match your deployment URL
NEXTAUTH_URL="http://localhost:3001"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-secure-random-string-at-least-32-chars"
# Generate with: openssl rand -base64 32
JWT_SECRET="generate-a-secure-random-string-at-least-32-chars"

# AI Providers
# Get from: https://openrouter.ai/docs
OPENROUTER_API_KEY=""
# Get from: https://console.cloud.google.com/
GOOGLE_API_KEY=""

# Upload Configuration
# Get from: https://uploadthing.com/dashboard
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Rate Limiting
# Maximum number of requests per window
RATE_LIMIT_MAX=100
# Window size in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true
ENABLE_PREMIUM_FEATURES=false

# Monitoring and Logging
# Optional: Analytics ID for tracking
NEXT_PUBLIC_ANALYTICS_ID=""
# Optional: Sentry DSN for error tracking
SENTRY_DSN=""

# Cache Configuration
# Optional: Redis URL for caching
REDIS_URL=""
# Cache time-to-live in seconds
CACHE_TTL=3600

# Security
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS="http://localhost:3001,http://localhost:3000"
# Generate with: openssl rand -base64 32
CSRF_SECRET="generate-a-secure-random-string"

# Email Configuration (optional)
# SMTP server settings for sending emails
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="" 
